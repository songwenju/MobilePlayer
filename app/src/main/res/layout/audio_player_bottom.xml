<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--播放时间-->
    <TextView
        android:id="@+id/tv_audio_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <!--播放进度条-->
    <SeekBar
        android:id="@+id/sk_audio_position"
        style="@android:style/Widget.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        android:progress="0"
        android:progressDrawable="@drawable/video_progress_drawable"
        android:thumb="@mipmap/video_progress_thumb"
        android:thumbOffset="0dp"/>

    <!--播放控制面板-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <!--顺序播放-->
        <ImageView
            android:id="@+id/iv_audio_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/audio_play_random_selector"/>

        <!--上一曲-->
        <ImageView
            android:id="@+id/iv_audio_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/audio_pre_selector"/>

        <!--播放/暂停-->
        <ImageView
            android:id="@+id/iv_audio_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/audio_pause_selector"/>
        <!--下一曲-->
        <ImageView
            android:id="@+id/iv_audio_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/audio_next_selector"/>
        <!--播放列表-->
        <ImageView
            android:id="@+id/iv_audio_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/audio_playlist_selector"/>
    </LinearLayout>
</LinearLayout>
