<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--示波器-->
    <ImageView
        android:id="@+id/iv_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/audio_aimi_wave"/>
    <!--歌手名-->
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_audio_artist"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/iv_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="歌曲名"/>
    <!--歌词-->
    <com.wjustudio.mobileplayer.widget.LyricView
        android:id="@+id/tv_audio_lyric"
        android:layout_below="@id/tv_audio_artist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
 />
</RelativeLayout>